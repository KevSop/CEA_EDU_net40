@{
    ViewBag.Title = "ClassRoomIndex";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div>
    <div>
        <div class="col-*-12">

            <div id="toolbar" style="display:none">
                <div style="float:left" class="btn btn-primary" data-toggle="modal" data-target="#addModal" onclick="AddRecord()">添加记录</div>
            </div>

            <table id="mytab" class="table table-hover"></table>

            <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="addModalLabel">添加记录</h4>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" id="editRowIndex" />
                            <input type="hidden" id="ClassRoomID" />
                            <div class="form-group">
                                编号：<input type="text" class="form-control" id="Code" placeholder="请输入编号" />
                            </div>
                            <div class="form-group">
                                名称：<input type="text" class="form-control" id="Name" placeholder="请输入名称" />
                            </div>
                            <div class="form-group">
                                地址：<input type="text" class="form-control" id="Address" placeholder="请输入地址" />
                            </div>
                            <div class="form-group">
                                座位数：<input type="text" class="form-control" id="SeatNum" placeholder="请输入地址" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                            <button type="button" class="btn btn-primary" id="SaveChanges">提交</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("div.icon-reorder").click(function () {
            $('#mytab').bootstrapTable('resetView', {
                height: tableHeight()
            })
        })
        //根据窗口调整表格高度
        $(window).resize(function () {
            $('#mytab').bootstrapTable('resetView', {
                height: tableHeight()
            })
        })

        $('#mytab').bootstrapTable({
            url: "../BasicInfo/GetClassRooms",//数据源
            dataField: "rows",//服务端返回数据键值 就是说记录放的键值是rows，分页时使用总记录数的键值为total
            sortName: "UpdateTime",//排序列
            cache: false,
            striped: true,//條紋行
            clickToSelect: true,//选择行即选择checkbox
            searchOnEnterKey: true,//ENTER键搜索
            height: tableHeight(),//高度调整
            search: true,//是否搜索
            pagination: true,//是否分页
            pageSize: 10,//单页记录数
            pageNumber: 1,//起始页
            pageList: [15, 20, 30, 50, 100, 10000],//分页步进值
            sidePagination: "server",//服务端分页
            contentType: "application/x-www-form-urlencoded",//请求数据内容格式 默认是 application/json 自己根据格式自行服务端处理
            dataType: "json",//期待返回数据类型
            method: "post",//请求方式
            searchAlign: "left",//查询框对齐方式
            queryParamsType: "limit",//查询参数组织方式
            queryParams: function getParams(params) {
                //params obj
                params.other = "otherInfo";
                return params;
            },
            searchOnEnterKey: false,//回车搜索
            showRefresh: true,//刷新按钮
            showColumns: true,//列选择按钮
            buttonsAlign: "left",//按钮对齐方式
            toolbar: "#toolbar",//指定工具栏
            toolbarAlign: "right",//工具栏对齐方式
            columns: [
                {
                    field: "ClassRoomID",//键名
                    title: "ID",//标题
                    visible: false
                    //sortable: true//是否可排序
                    //order: "desc"//默认排序方式
                },
                {
                    field: "Code",
                    title: "编号",
                    sortable: true
                    //,titleTooltip: "this is tips"
                },
                {
                    field: "Name",
                    title: "名称",
                    sortable: true
                    //,titleTooltip: "this is tips"
                },
                {
                    field: "Address",
                    title: "地址",
                    sortable: true
                    //,titleTooltip: "this is tips"
                },
                {
                    field: "SeatNum",
                    title: "座位数",
                    sortable: true,
                    //,titleTooltip: "this is tips"
                },
                {
                    field: "UpdateTime",
                    title: "最近修改时间",
                    sortable: true,
                    order: "desc",//默认排序方式
                    formatter: 'dateFormatter',//对本列数据做格式化
                }
            ],
            onClickRow: function (row, $element) {
                //$element是当前tr的jquery对象
                //$element.css("background-color", "green");
            },//单击row事件
            onDblClickRow: function (row, $element) {

                $("#addModalLabel").html("修改记录");
                $("#ClassRoomID").val(row.ClassRoomID);
                $("#Code").val(row.Code);
                $("#Name").val(row.Name);
                $("#Address").val(row.Address);
                $("#SeatNum").val(row.SeatNum);
                $("#editRowIndex").val(this.data.indexOf(row));
                nodeObj.ClassRoomID = row.ClassRoomID;
                nodeObj.Code = row.Code;
                nodeObj.Name = row.Name;
                nodeObj.Address = row.Address;
                nodeObj.Description = row.Description;

                $("#Code").attr('disabled', 'true');

                $('#addModal').modal('toggle');
            },
            locale: "zh-CN",//中文支持,
            detailView: false, //是否显示详情折叠
            detailFormatter: function (index, row, element) {
                var html = '';
                $.each(row, function (key, val) {
                    html += "<p>" + key + ":" + val + "</p>"
                });
                return html;
            }
        });
        //MVVM绑定
        window.nodeObj = {};
        $('#ClassRoomID').change(function () {
            nodeObj.ClassRoomID = this.value;
        });
        $('#Code').change(function () {
            nodeObj.Code = this.value;
        });
        $('#Name').change(function () {
            nodeObj.Name = this.value;
        });
        $('#Address').change(function () {
            nodeObj.Address = this.value;
        });
        $('#SeatNum').change(function () {
            nodeObj.SeatNum = this.value;
        });
        //保存事件
        $("#SaveChanges").click(function () {
            var param = {};
            param.jsonString = JSON.stringify(nodeObj);
            param.action = $("#editRowIndex").val() == "" ? "add" : "update";
            $.ajax({
                url: '@Url.Action("SaveClassRoom", "BasicInfo")',
                type: "POST",
                data: param,
                dataType: 'text',
                success: function (data) {
                    $('#addModal').modal('toggle');
                    if (data == "success") {
                        if ($("#editRowIndex").val() == "") {
                            //新增
                            $('#mytab').bootstrapTable('refresh');
                        }
                        else {
                            //修改
                            $('#mytab').bootstrapTable('updateRow', {
                                index: $("#editRowIndex").val(),
                                row: {
                                    ClassRoomID: $("#ClassRoomID").val(),
                                    Code: $("#Code").val(),
                                    Name: $("#Name").val(),
                                    Address: $("#Address").val(),
                                    SeatNum: $("#SeatNum").val()
                                }
                            });
                        }
                    }
                    else {
                        console.log(data);
                    }
                }
            });
        });
    })

    function tableHeight() {
        return $(window).height() * 0.85;
    }

    function infoFormatter(value, row, index) {
        return "id:" + row.id + " name:" + row.name + " age:" + row.age;
    }

    function descriptionFormatter(value, row, index){
        return "<span title='双击查看具体描述信息'>" + (value.length > 80 ? value.substring(0, 80) + "..." : value) + "</span>";
    }

    function AddRecord() {
        $("#addModal").find("input[type='text']").each(function () {
            $(this).val("");
        });
        $("#Type").val("-");
        nodeObj.ClassRoomID = "0";
        nodeObj.Code = "";
        nodeObj.Name = "";
        nodeObj.Address = "";
        nodeObj.SeatNum = "";

        $("#Code").removeAttr('disabled');

        $("#addModalLabel").html("添加记录");
    }

</script>



